<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/tuple"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/serial_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Serial No"
        android:gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Date:"
            android:layout_margin="12dp"/>
        <EditText
            android:id="@+id/edit_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Date"
            android:textSize="22dp"
            android:layout_margin="12dp"/>
        <Button
            android:id="@+id/date_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pick Date"
            android:layout_margin="12dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bill_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Challan:"
            android:layout_marginLeft="12dp"/>
        <EditText
            android:id="@+id/edit_bill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Chalan Number"
            android:digits="0123456789."
            android:inputType="numberDecimal"
            android:textSize="22dp"
            android:layout_marginLeft="12dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/name_volgate_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Volgate:"
            android:layout_marginLeft="12dp"/>
        <EditText
            android:id="@+id/edit_volgate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Volgate Namr"
            android:textSize="22dp"
            android:layout_marginLeft="12dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/quantity_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Quantity:"
            android:layout_marginLeft="12dp"/>
        <EditText
            android:id="@+id/edit_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:digits="0123456789."
            android:inputType="numberDecimal"
            android:hint="Quantity in cft"
            android:textSize="22dp"
            android:layout_marginLeft="12dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rate_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Rate:"
            android:layout_marginLeft="12dp"/>
        <EditText
            android:id="@+id/edit_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:digits="0123456789."
            android:inputType="numberDecimal"
            android:hint="Rate in Tk"
            android:textSize="22dp"
            android:layout_marginLeft="12dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/amount_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Amount:"
            android:layout_marginLeft="12dp"/>
        <EditText
            android:id="@+id/edit_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Amount in Tk"
            android:textSize="22dp"
            android:layout_marginLeft="12dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/remark_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Bill No:"
            android:layout_marginLeft="12dp"/>
        <EditText
            android:id="@+id/edit_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Any Remarks?"
            android:textSize="22dp"
            android:layout_marginLeft="12dp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/img_remove"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_close_black_24dp"/>

</LinearLayout>